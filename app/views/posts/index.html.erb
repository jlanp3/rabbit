<h1>index</h1>

<div class="row">
  <% @posts.each do |post| %>
  <div class="col s12">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <small>
          <%= post.user.username %> - Posted: <%= time_ago_in_words(post.created_at) %>
        </small>
        <%= content_tag(:span, "#{post.title}", class: "card-title center") %>
        <p><%= post.content %></p>
      </div>
      <div class="card-action center">
        <a href="#">This is a link</a>
        <a href="#">This is a link</a>
      </div>
    </div>
  </div>
  <% end %>
</div>