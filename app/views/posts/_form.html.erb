<div class="row">
  <div class="col s12 center">
    <h1><%= @post.new_record? ? "Create new post" : "Edit post" %></h1>
  </div>
</div>

<div class="row">
  <%= form_for @post, class: "col s12" do |f| %>
  <div class="row">
    <div class="input-field col s12">
      <%= f.text_field :title, autofocus: true, class: "validate", id: "title" %>
      <%= f.label :title, for: "title" %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s12">
      <%= f.rich_text_area :content, class: "materialize-textarea"%>
    </div>
  </div>
  <div class="row">
    <div class="input-field center">
      <%= @post.new_record? ? (f.button "Create post", class: "waves-effect waves-light btn") 
                            : (f.button "Edit post", class: "waves-effect waves-light btn") %>
    </div>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <% end %>
</div>